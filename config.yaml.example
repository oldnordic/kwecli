openai_api_key: ""
ollama_model: "qwen3-coder"
ollama_base_url: "http://localhost:11434"
use_gpt: false
use_ollama: true
log_level: "INFO"

# Backend
backend_host: "127.0.0.1"
backend_port: 8000
api_prefix: "/api"

# MCP
mcp_enabled: true
mcp_config_path: ".claude/mcp.json"
mcp_timeout: 30
mcp_max_retries: 3

# Quality Policy (mandatory)
max_file_lines: 300
modularization_required: true
disallow_placeholders: true
tdd_required: true
offline_docs_required: true
